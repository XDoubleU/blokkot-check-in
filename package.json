{
  "scripts": {
    "build": "turbo build",
    "cli": "dotenv -- turbo cli",
    "db:migration-create": "dotenv -- turbo db:migration-create",
    "db:migration-down": "dotenv -- turbo db:migration-down",
    "db:migration-up": "dotenv -- turbo db:migration-up",
    "db:seed": "dotenv -- turbo db:seed",
    "db:test": "dotenv -- turbo db:test",
    "dev": "dotenv -- turbo dev",
    "format": "prettier --write ./**/*.{ts,tsx}",
    "preinstall": "npx only-allow pnpm",
    "jscpd": "jscpd --config jscpd.json .",
    "knip": "knip",
    "lint": "turbo lint && prettier --check ./**/*.{ts,tsx}",
    "lint:fix": "turbo lint:fix",
    "lint:report": "turbo lint:report",
    "prod": "turbo prod",
    "test": "dotenv -- turbo test",
    "test:cov": "dotenv -- turbo test:cov",
    "test:report": "dotenv -- turbo test:report"
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "trailingComma": "none"
  },
  "dependencies": {
    "dotenv-cli": "^7.1.0",
    "jscpd": "^3.5.4",
    "knip": "^2.1.3",
    "prettier": "^2.8.7",
    "turbo": "^1.8.5"
  }
}
