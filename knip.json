{
  "exclude": [
    "classMembers",
    "enumMembers"
  ],
  "ignoreWorkspaces": [
    "packages/eslint-config-custom"
  ],
  "ignore": ["**/.eslintrc.js"],
  "ignoreDependencies": ["eslint-config-custom"],
  "workspaces": {
    ".": {
      "ignore": ["integration/script.js", ".yarn"]
    },
    "apps/api": {
      "entry": "src/main.ts"
    },
    "apps/web": {
      "ignore": ["sentry.edge.config.js"],
      "ignoreDependencies": ["styles"]
    },
    "packages/mikro-orm-config": {
      "ignore": [
        "src/migrations/**",
        "src/seeders/**",
        "src/cli-config.ts"
      ],
      "ignoreDependencies": ["ts-node"]
    },
    "packages/types-custom": {}
  }
}