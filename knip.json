{
  "exclude": [
    "classMembers",
    "enumMembers"
  ],
  "ignoreWorkspaces": [
    "packages/eslint-config-custom"
  ],
  "ignore": ["**/.eslintrc.js"],
  "ignoreBinaries": ["eslint", "tsc"],
  "ignoreDependencies": ["tsconfig-custom", "eslint-config-custom"],
  "workspaces": {
    ".": {
      "ignore": ["integration/script.js", ".yarn"]
    },
    "apps/api": {
      "entry": "src/main.ts",
      "ignoreDependencies": ["helmet"]
    },
    "apps/web": {
      "ignore": ["sentry.edge.config.js"]
    },
    "packages/mikro-orm-config": {
      "ignore": [
        "src/migrations/**",
        "src/seeders/**",
        "src/cli-config.ts"
      ],
      "ignoreDependencies": ["ts-node", "@mikro-orm/cli"]
    },
    "packages/my-api-wrapper": {},
    "packages/types-custom": {}
  }
}