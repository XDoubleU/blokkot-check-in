{
  "exclude": [
    "classMembers"
  ],
  "ignoreWorkspaces": [
    "packages/eslint-config-custom"
  ],
  "workspaces": {
    ".": {
      "ignore": ["integration/script.js"],
      "ignoreDependencies": ["only-allow"]
    },
    "apps/api": {
      "entry": "src/main.ts",
      "ignore": ["src/cli/**"],
      "ignoreDependencies": ["helmet", "graphql"]
    },
    "apps/web": {
      "ignore": ["sentry.edge.config.js"]
    },
    "packages/mikro-orm-config": {
      "ignore": [
        "src/migrations/**",
        "src/seeders/**"
      ],
      "ignoreDependencies": ["ts-node"]
    }
  }
}