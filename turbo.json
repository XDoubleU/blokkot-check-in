{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "WEB_URL",
    "API_PORT",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NEXT_PUBLIC_API_URL",
    "API_SENTRY_DSN",
    "DATABASE_URL",
    "DATABASE_NAME",
    "CA_CERT",
    "JWT_ACCESS_SECRET",
    "JWT_ACCESS_EXPIRATION",
    "JWT_REFRESH_SECRET",
    "JWT_REFRESH_EXPIRATION",
    "ADMIN_USERNAME",
    "ADMIN_PASSWORD"
  ],
  "pipeline": {
    "dev": {},
    "build": {
      "dependsOn": ["^build"]
    },
    "prod": {},
    "export": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "lint:report": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:cov": {
      "cache": false
    },
    "test:report": {
      "cache": false
    },
    "db:migration-create": {
      "cache": false
    },
    "db:test": {
      "cache": false
    }
  }
}