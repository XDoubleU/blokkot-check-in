{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "WEB_URL",
    "JWT_ACCESS_SECRET",
    "JWT_ACCESS_EXPIRATION",
    "JWT_REFRESH_SECRET",
    "JWT_REFRESH_EXPIRATION",
    "NEXT_PUBLIC_API_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "lint:fix": {},
    "test": {
      "cache": false
    },
    "test:cov": {
      "cache": false
    },
    "db:test": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate-dev": {
      "cache": false
    },
    "db:migrate-prod": {
      "cache": false
    },
    "cli": {}
  }
}